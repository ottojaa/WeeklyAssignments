<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Weekly 1</title>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="../../index.js"></script>

</head>
<body class="margin background">

<div class="row">
    <div class="col-md-4 offset-md-4" style="background-color: #fff;margin-top: 85px;padding:20px;">
        <h3>{{viewTemplate}}</h3>
        <form action="/images/register" method="POST" autocomplete="off" enctype="application/x-www-form-urlencoded">
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" name="username" placeholder="Username" value="{{user.username}}"
                       required>
            </div>
            <div class="form-group">
                <label>First name</label>
                <input type="text" class="form-control" name="firstname" placeholder="First name" value="{{user.firstname}}"
                       required>
            </div>
            <div class="form-group">
                <label>Last name</label>
                <input type="text" class="form-control" name="lastname" placeholder="Last name" value="{{user.lastname}}"
                       required>
            </div>
            <div class="form-group">
                <label>Password (6 characters minimum)</label>
                <input type="password" class="form-control" minlength="6" name="password" placeholder="Last name" value="{{user.password}}"
                       required>
            </div>
            <div class="form-group">
                <div class="flex">
                    <button type="submit" class="btn btn-success"><i class="fa fa-share"></i> Submit</button>
                    <a class="btn btn-dark" href="/images/gallery"><i class="fa fa-image"></i> Gallery </a>
                </div>
            </div>
        </form>
    </div>
</div>
</body>
</html>